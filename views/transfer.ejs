<%- include("header") -%>
<body class="text-center">
  <h2>Transfer Money</h2>

  <form class="transfer-form mt-5" action="/transferDetails" method="post">
  <div class="form-group">
    <input type="text" name="senderAccNo" class="form-control form-control-lg rounded-0 rounded-top" placeholder="Sender's Account Number" autocomplete="off">
  </div>
  <div class="form-group">
    <input type="text" name="recieverAccNo" class="form-control form-control-lg rounded-0 mt-1" placeholder="Reciever's Account Number" autocomplete="off">
  </div>
  <div class="form-group">
    <input type="number" name="amountToTransfer"class="form-control form-control-lg rounded-0 rounded-bottom mt-1" placeholder="Amount" autocomplete="off">
  </div>
  <button type="submit" name="transferButton" class="btn btn-success btn-lg mt-5" value="transferButton">Transfer</button>
</form>

</body>
