<%- include("header") -%>

    <!-- Title Section -->

    <div class="row title-section">
      <div class="col col-lg-6 col-md-12 col-sm-12">
        <h1>Welcome to Sparks Bank</h1>
      </div>
      <div class="title-image-div col col-lg-6 col-md-12 col-sm-12">
        <img class="title-image" src="images/credit.png" alt="bank-mockup">
      </div>
    </div>


  </div>

  <!-- Facilities Section -->

  <div class="facilities-section">

    <h2>Our Facilities</h2>

    <div class="row cards-section">
      <div class="pricing-col col col-lg-4 col-md-6 col-sm-12 col-12">
        <div class="card">
          <div class="card-header">
            <h3>View Customers</h3>
          </div>
          <div class="card-body d-grid gap-2">
            <div><i class="fa-solid fa-eye fa-6x feature-image"></i></div>
            <p class="card-text">View the details of every customer in he bank.</p>
            <form class="" action="/customer" method="post">
              <button type="submit" class="btn btn-dark btn-lg">View Customers</button>
            </form>
          </div>
        </div>
      </div>

      <div class="pricing-col col col-lg-4 col-md-6 col-sm-12 col-12">
        <div class="card">
          <div class="card-header">
            <h3>Transfer Money</h3>
          </div>
          <div class="card-body d-grid gap-2">
            <div><i class="fa-solid fa-money-bill-transfer fa-6x feature-img"></i></div>
            <p class="card-text mt-3">You can send money from your account.</p>
            <form class="" action="/transfer" method="post">
              <button type="submit" class="btn btn-dark btn-lg">Transfer Money</button>
            </form>
          </div>
        </div>
      </div>

      <div class="pricing-col col col-lg-4 col-md-12 col-sm-12 col-12">
        <div class="card">
          <div class="card-header">
            <h3>Check Balance</h3>
          </div>
          <div class="card-body d-grid gap-2">
            <div><i class="fa-solid fa-circle-check fa-6x feature-img"></i></div>
            <p class="card-text mt-3">You can check the balance in your bank account.</p>
            <form class="" action="/balance" method="post">
              <button type="submit" class="btn btn-dark btn-lg">Check Balance</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("footer") -%>
